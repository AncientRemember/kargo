apiVersion: "v1"
kind: "ReplicationController"
metadata: 
  name: "das"
  labels: 
    app: "das"
spec: 
  replicas: 2
  template: 
    metadata: 
      name: "das"
      labels: 
        app: "das"
    spec: 
      containers: 
        - name: "das"
          image: {{ das_private_repo }}:{{ das_version }}
          imagePullPolicy: Always
          ports: 
            - containerPort: 8080
            - containerPort: 9555
---
apiVersion: "v1"
kind: "Service"
metadata:
  name: "das"
spec:
  type: NodePort
  selector:
    app: "das"
  ports:
    - name: "http"
      port: 8080
      targetPort: 8080
      nodePort: 30981
      protocol: "TCP"
    - name: "debug"
      port: 9555
      targetPort: 9555
      nodePort: 30982
