apiVersion: v1
kind: Service
metadata:
  name: elasticsearch
  namespace: "kube-system"
  labels:
    component: elasticsearch
    role: client
spec:
  type: NodePort
  selector:
    component: elasticsearch
    role: client
  ports:
  - name: http
    port: 9200
    nodePort:  30192
    protocol: TCP
    targetPort: 9200
  - name: gossip
    port: 9300
    nodePort: 30199
    targetPort: 9300
    protocol: TCP
